@model Luftfartshinder.Models.ViewModel.FlightCrew.FlightCrewEditObstacleRequest
@{
    ViewData["Title"] = "Edit Obstacle";
    ViewData["LayoutType"] = "ipad";
}

@section Styles {
    <link href="~/css/draft.css" rel="stylesheet" />
}

<div class="container mt-4 pt-4">
    <div class="text-center mb-4">
        <h1 class="mb-2">Edit Obstacle #@Model.Id</h1>
        <p class="text-muted">@Model.Name</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Obstacle Information</h4>
                    <small class="text-muted">Note: Status cannot be changed by FlightCrew</small>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditObstacle" asp-controller="FlightCrew" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Type <span class="text-danger">*</span></label>
                            <select class="form-select" asp-for="Type" required>
                                <option value="Point">Point</option>
                                <option value="Mast">Mast</option>
                                <option value="Line">Line</option>
                                <option value="Power line">Power line</option>
                                <option value="Area">Area</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" asp-for="Name" class="form-control" required maxlength="40"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Height" class="form-label">Height (meters)</label>
                            <input type="number" step="0.01" asp-for="Height" class="form-control" max="200"/>
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Latitude" class="form-label">Latitude <span class="text-danger">*</span></label>
                                <input type="number" step="0.000001" asp-for="Latitude" class="form-control" required />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Longitude" class="form-label">Longitude <span class="text-danger">*</span></label>
                                <input type="number" step="0.000001" asp-for="Longitude" class="form-control" required />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" maxlength="500" placeholder="Brief description of the obstacle"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                            <a asp-action="ObstacleDetails" asp-controller="FlightCrew" asp-route-id="@Model.Id" 
                               class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


