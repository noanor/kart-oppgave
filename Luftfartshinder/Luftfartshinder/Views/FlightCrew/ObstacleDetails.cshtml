@using System.Globalization
@model Luftfartshinder.Models.Domain.Obstacle
@{
    ViewData["Title"] = "Obstacle Details";
    ViewData["LayoutType"] = "ipad";
}

@section Styles {
    <link href="~/css/draft.css" rel="stylesheet" />
    <link href="~/css/registrar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
}

<div class="container mt-4 pt-4">
    <div class="text-center mb-4">
        <h1 class="mb-2">Obstacle #@Model.Id</h1>
        <p class="text-muted">@Model.Name</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h4 class="mb-0">Obstacle Information</h4>
                </div>
                <div class="card-body">
                    <dl class="row g-2">
                        <dt class="col-sm-5">ID:</dt>
                        <dd class="col-sm-7">#@Model.Id</dd>

                        <dt class="col-sm-5">Type:</dt>
                        <dd class="col-sm-7">@Model.Type</dd>

                        <dt class="col-sm-5">Name:</dt>
                        <dd class="col-sm-7">@Model.Name</dd>

                        <dt class="col-sm-5">Height:</dt>
                        <dd class="col-sm-7">@(Model.Height?.ToString() ?? "-")</dd>

                        <dt class="col-sm-5">Latitude:</dt>
                        <dd class="col-sm-7">@Model.Latitude.ToString("0.######", CultureInfo.InvariantCulture)</dd>

                        <dt class="col-sm-5">Longitude:</dt>
                        <dd class="col-sm-7">@Model.Longitude.ToString("0.######", CultureInfo.InvariantCulture)</dd>

                        <dt class="col-sm-5">Description:</dt>
                        <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "-")</dd>

                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            @switch (Model.Status)
                            {
                                case Luftfartshinder.Models.Domain.Obstacle.Statuses.Approved:
                                    <span class="pill pill-approved">Approved</span>
                                    break;
                                case Luftfartshinder.Models.Domain.Obstacle.Statuses.Rejected:
                                    <span class="pill pill-rejected">Rejected</span>
                                    break;
                                case Luftfartshinder.Models.Domain.Obstacle.Statuses.Pending:
                                    <span class="pill pill-pending">Pending</span>
                                    break;
                            }
                        </dd>

                        @if (!string.IsNullOrWhiteSpace(Model.RegistrarNote))
                        {
                            <dt class="col-sm-5">Registrar Note:</dt>
                            <dd class="col-sm-7">@Model.RegistrarNote</dd>
                        }
                    </dl>

                    <div class="mt-3">
                        <a asp-action="EditObstacle" asp-controller="FlightCrew" asp-route-id="@Model.Id" 
                           class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Obstacle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h4 class="mb-0">Map Preview</h4>
                </div>
                <div class="card-body">
                    <div class="obstacle-map h-100"
                         data-lat="@Model.Latitude.ToString(CultureInfo.InvariantCulture)"
                         data-lng="@Model.Longitude.ToString(CultureInfo.InvariantCulture)"
                         id="map-@Model.Id"
                         style="min-height: 400px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/draft.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
}

