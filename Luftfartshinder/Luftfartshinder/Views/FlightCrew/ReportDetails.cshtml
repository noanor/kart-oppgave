@using System.Globalization
@model Luftfartshinder.Models.ViewModel.FlightCrew.FlightCrewReportDetailsViewModel
@{
    ViewData["Title"] = "Report Details";
    ViewData["LayoutType"] = "ipad";
}

@section Styles {
    <link href="~/css/draft.css" rel="stylesheet" />
    <link href="~/css/registrar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
}

<div class="container mt-4 pt-4">
    <div class="text-center mb-4">
        <h1 class="mb-2">Report #@Model.Id</h1>
        <p class="text-muted">Reported by: @Model.Author</p>
        <p class="text-muted">Date: @Model.ReportDate.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <!-- Report Information Card -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="mb-0">Report Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                @if (!string.IsNullOrWhiteSpace(Model.Summary))
                {
                    <dt class="col-sm-3">Summary:</dt>
                    <dd class="col-sm-9">@Model.Summary</dd>
                }
            </dl>

            <div class="mt-3">
                <a asp-action="EditReport" asp-controller="FlightCrew" asp-route-id="@Model.Id" 
                   class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Edit Report
                </a>
            </div>
        </div>
    </div>

    <!-- Obstacles List -->
    <div class="mb-4">
        <h3 class="mb-3">Obstacles (@Model.Obstacles.Count)</h3>
        
        @if (Model.Obstacles.Count == 0)
        {
            <p class="text-muted">No obstacles in this report.</p>
        }
        else
        {
            @for (int i = 0; i < Model.Obstacles.Count; i++)
            {
                var o = Model.Obstacles.ToList()[i];
                <div class="card mb-4 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@o.Name</h5>
                        <span class="badge bg-secondary">#@o.Id</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Left Column: Obstacle Details -->
                            <div class="col-md-6 mb-3 mb-md-0">
                                <dl class="row g-1">
                                    <dt class="col-sm-5">Type:</dt>
                                    <dd class="col-sm-7">@o.Type</dd>

                                    <dt class="col-sm-5">Height:</dt>
                                    <dd class="col-sm-7">@(o.Height?.ToString() ?? "-")</dd>

                                    <dt class="col-sm-5">Status:</dt>
                                    <dd class="col-sm-7">
                                        @switch (o.Status)
                                        {
                                            case Luftfartshinder.Models.Domain.Obstacle.Statuses.Approved:
                                                <span class="pill pill-approved">Approved</span>
                                                break;
                                            case Luftfartshinder.Models.Domain.Obstacle.Statuses.Rejected:
                                                <span class="pill pill-rejected">Rejected</span>
                                                break;
                                            case Luftfartshinder.Models.Domain.Obstacle.Statuses.Pending:
                                                <span class="pill pill-pending">Pending</span>
                                                break;
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Description:</dt>
                                    <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(o.Description) ? o.Description : "-")</dd>

                                    <dt class="col-sm-5">Latitude:</dt>
                                    <dd class="col-sm-7">@o.Latitude.ToString("0.######", CultureInfo.InvariantCulture)</dd>

                                    <dt class="col-sm-5">Longitude:</dt>
                                    <dd class="col-sm-7">@o.Longitude.ToString("0.######", CultureInfo.InvariantCulture)</dd>

                                    @if (!string.IsNullOrWhiteSpace(o.RegistrarNote))
                                    {
                                        <dt class="col-sm-5">Registrar Note:</dt>
                                        <dd class="col-sm-7">@o.RegistrarNote</dd>
                                    }
                                </dl>

                                <div class="mt-3">
                                    <a asp-action="ObstacleDetails" asp-controller="FlightCrew" asp-route-id="@o.Id" 
                                       class="btn btn-primary">
                                        <i class="bi bi-eye me-2"></i>View Details
                                    </a>
                                </div>
                            </div>

                            <!-- Right Column: Map Preview -->
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <h6 class="mb-0">Map Preview</h6>
                                    </div>
                                    <div class="card-body p-0" style="min-height: 300px;">
                                        <div class="obstacle-map h-100"
                                             data-lat="@o.Latitude.ToString(CultureInfo.InvariantCulture)"
                                             data-lng="@o.Longitude.ToString(CultureInfo.InvariantCulture)"
                                             id="map-@i"
                                             style="min-height: 300px;">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/draft.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
}

