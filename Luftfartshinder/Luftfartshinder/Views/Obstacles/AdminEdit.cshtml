@model AdminEditObstacleRequest

@{
}

@section Styles {
    <link href="~/css/adminEdit.css" rel="stylesheet" />
}
<div class="container py-5">
    <div class="mt-5 mb-4">
        <div class="h1">
            Edit Obstacle #@Model.Id
        </div>
        <div class="text-muted">Reported by: @Model.Report.Author</div>
    </div>

    <form id="adminEditObstacleForm" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Type" class="form-label">Type <span class="text-danger">*</span></label>
            <select class="form-select" asp-for="Type" required>
                <option value="Point">Point</option>
                <option value="Mast">Mast</option>
                <option value="Line">Line</option>
                <option value="Power line">Power line</option>
                <option value="Area">Area</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input type="text" asp-for="Name" class="form-control" required maxlength="40" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Height" class="form-label">Height (meters)</label>
            <input type="number" step="0.01" asp-for="Height" class="form-control" max="200" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Latitude" class="form-label">Latitude <span class="text-danger">*</span></label>
                <input type="number" step="0.000001" asp-for="Latitude" class="form-control" required />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Longitude" class="form-label">Longitude <span class="text-danger">*</span></label>
                <input type="number" step="0.000001" asp-for="Longitude" class="form-control" required />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" maxlength="500" placeholder="Brief description of the obstacle"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="col">
                <label class="form-label">Registrar Note</label>
                <textarea cols="7" id="registrarNote" class="form-control" asp-for="RegistrarNote">@Model.RegistrarNote</textarea>

            </div>
        </div>


    </form>

    <div class="mb-3">
        <div class="d-flex">
            <button type="submit" form="adminEditObstacleForm" class="btn btn-primary">Update</button>

            <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
                Delete
            </button>
        </div>

    </div>

    <!-- Delete confirmation modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete obstacle?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete obstacle <strong>@Model.Name</strong>? This action cannot be undone!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-controller="Obstacles" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
