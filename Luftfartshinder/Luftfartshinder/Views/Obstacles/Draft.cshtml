@{
}

@model Luftfartshinder.Models.ViewModel.SessionObstacleDraft
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Draft Obstacles (@Model.Obstacles.Count)</h2>

@if (Model.Obstacles.Count == 0)
{
    <p>No obstacles in draft yet.</p>
}
else
{
    <div style="overflow:auto;">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Height</th>
                    <th>Coords</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Obstacles.Count; i++)
                {
                    var o = Model.Obstacles[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@o.Type</td>
                        <td>@(o.Name ?? o.GetType().GetProperty("Name")?.GetValue(o) ?? "")</td>
                        <td>
                            @{
                                // Try both property names in case your Obstacle uses a different one
                                var hProp = o.GetType().GetProperty("ViewObstacleHeight") ?? o.GetType().GetProperty("Height");
                                var hVal = hProp?.GetValue(o);
                            }
                            @hVal
                        </td>
                        <td>
                            @{
                                // Show either "lat,lng" or a combined coords string
                                var latitude = o.GetType().GetProperty("Latitude")?.GetValue(o) as string;
                                var longitude = o.GetType().GetProperty("Longitude")?.GetValue(o) as string;
                                
                                if (!string.IsNullOrWhiteSpace(latitude) && !string.IsNullOrEmpty(longitude))
                                {
                                    @latitude
                                }
                                
                            }
                        </td>
                        <td>@(o.Description ?? o.GetType().GetProperty("Description")?.GetValue(o) ?? "")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <form asp-action="Commit" asp-controller="Obstacles" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button class="btn btn-primary btn-sm" type="submit">Commit to DB</button>
    </form>

    <form asp-action="ClearDraft" asp-controller="Obstacles" method="post" class="d-inline ms-2">
        @Html.AntiForgeryToken()
        <button class="btn btn-outline-danger btn-sm" type="submit">Clear Draft</button>
    </form>
}
