@model EditObstacleRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Obstacle - @Model.Name</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Type" class="form-label">Type <span class="text-danger">*</span></label>
            <select class="form-select" asp-for="Type" required>
                <option value="Point">Point</option>
                <option value="Mast">Mast</option>
                <option value="Line">Line</option>
                <option value="Power line">Power line</option>
                <option value="Area">Area</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
            <input type="text" asp-for="Name" class="form-control" required maxlength="40" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Height" class="form-label">Height (meters)</label>
            <input type="number" asp-for="Height" class="form-control" max="200" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Latitude" class="form-label">Latitude <span class="text-danger">*</span></label>
                <input type="number" asp-for="Latitude" class="form-control" required />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Longitude" class="form-label">Longitude <span class="text-danger">*</span></label>
                <input type="number" asp-for="Longitude" class="form-control" required />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" maxlength="500" placeholder="Brief description of the obstacle"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-center gap-5">
                <button type="submit" class="btn btn-primary me-4">Update</button>

                <button type="button" class="btn btn-danger ms-4" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    Delete
                </button>
            </div>

        </div>
    </form>

    <!-- Delete confirmation modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete obstacle?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete obstacle <strong>@Model.Name</strong>? This action cannot be undone!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-controller="Obstacles" asp-action="DeleteDraftObstacle" method="post" class="d-inline">
                        <input type="hidden" name="index" value="@ViewBag.Index" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
