@model List<Luftfartshinder.Models.Domain.Report>
@{
    ViewData["Title"] = "Registrar List";
}

<head>
    <link href="~/css/registrar.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>

<body>
    <header>
        <h2>Registrar - List of Reports</h2>
    </header>
    <div class="container p-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Date</th>
                    <th scope="col">No. of obstacles</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].Id</td>
                        <td>@Model[i].Title</td>
                        <td>@Model[i].Author</td>
                        <td>@Model[i].ReportDate</td>
                        <td>@Model[i].Obstacles.Count</td>
                        <td>
                            <a class="btn btn-primary" role="button"
                               asp-action="Details"
                               asp-controller="Registrar"
                               asp-route-id="@(i+1)"
                               style="vertical-align: middle; text-decoration: none;">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>


