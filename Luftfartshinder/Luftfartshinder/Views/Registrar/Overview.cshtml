@model List<Luftfartshinder.Models.Domain.Report>
@{
    ViewData["Title"] = "Registrar List";
}

@section Styles {
    <link href="~/css/registrar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
}

<div class="container">
    @* Small back button that sends the user back to the main dashboard *@
    <div class="row mb-4">
        <div class="col-12">
            <a href="@Url.Action("Dashboard", "Dashboard")" class="back-icon">
                <i class="bi bi-arrow-left-circle"></i>
            </a>
        </div>
    </div>
</div>

<header class="mb-5">
    @* Page heading for the registrar overview *@
    <div class="h1 text-center">
        List of Reports
    </div>
</header>

<div class="container">
    @* Table that lists all reports available to the registrar *@
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Date</th>
                <th scope="col">No. of obstacles</th>
                <th scope="col">Pending</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @* Loop through each report in the model and render one row per report *@
            @foreach (var report in Model)
            {
                @* Count how many obstacles in this report still have status "Pending" *@
                var pendingCount = report.Obstacles.Count(o => o.Status == Luftfartshinder.Models.Domain.Obstacle.Statuses.Pending);

                <tr>
                    <td>@report.Id</td>
                    <td>@report.Title</td>
                    <td>@report.Author</td>
                    <td>@report.ReportDate</td>
                    <td>@report.Obstacles.Count</td>
                    <td>
                        @* Show a yellow badge when there are pending obstacles, otherwise show 0 in grey text *@
                        @if (pendingCount > 0)
                        {
                            <span class="badge bg-warning text-dark">@pendingCount</span>
                        }
                        else
                        {
                            <span class="text-muted">0</span>
                        }
                    </td>
                    <td>
                        @* Button that navigates to the detailed view of this specific report *@
                        <a class="btn btn-primary" role="button"
                           asp-action="Details"
                           asp-controller="Registrar"
                           asp-route-id="@report.Id"
                           style="vertical-align: middle; text-decoration: none;">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

