@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Luftfartshinder</title>
        <script type="importmap"></script>
        <script src="https://kit.fontawesome.com/53d2400da6.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Luftfartshinder.styles.css" asp-append-version="true" />
    </head>

    <body>
        @if (signInManager.IsSignedIn(User))
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-detail box-shadow fixed-top">
                    <div class="container-fluid">
                        <a class="navbar-brand text-white" asp-area="" asp-controller="Home"
                            asp-action="Index">Luftfartshinder</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home"
                                        asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Obstacles"
                                        asp-action="Draft">Draft</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Registrar" asp-action="Index">Registrar</a>
                                </li>
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="SuperAdminHome">Dashboard</a>
                                    </li>
                                }
                            </ul>
                            <div class="d-flex align-items-center ms-auto text-light">

                                @User?.Identity?.Name


                                <a class="btn me-3 ms-3 bg-light text-dark" asp-area="" asp-controller="Account"
                                    asp-action="SignOut">Sign out</a>

                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        }

        @RenderBody();


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>

</html>