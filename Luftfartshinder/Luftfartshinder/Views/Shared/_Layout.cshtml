@using System.Security.Claims
@using Luftfartshinder.Models.Domain
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager
@{
    var layoutType = ViewData["LayoutType"]?.ToString()?.ToLower() ?? "auto";

    var isSignedIn = signInManager.IsSignedIn(User);
    var isSuperAdmin = User.IsInRole("SuperAdmin");
    var isRegistrar = User.IsInRole("Registrar");
    var isFlightCrew = User.IsInRole("FlightCrew");
}
<!DOCTYPE html>
<html lang="no">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Kartverket</title>
        <script type="importmap"></script>
        <script src="https://kit.fontawesome.com/53d2400da6.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Luftfartshinder.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    </head>

    <body data-layout-type="@layoutType" class="@(ViewData["BodyClass"]?.ToString() ?? "")">
        @* Show navigation and header only for signed-in users *@
        @if (isSignedIn)
        {
            <header>
                @* Desktop navbar (PC) *@
                <nav id="navbarPC" class="navbar navbar-expand-sm navbar-light bg-detail box-shadow fixed-top">
                    <div class="container-fluid">
                        <a class="navbar-brand text-white d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/LogoKartverket.png" alt="Kartverket" class="navbar-logo" />
                            Kartverket
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                            <ul class="navbar-nav flex-grow-1">
                                @* Home is available to all authenticated users *@
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                
                                @* Draft is available to all authenticated users *@
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Obstacles" asp-action="Draft">Draft</a>
                                </li>

                                @* Admin dropdown only for SuperAdmin *@
                                @if (isSuperAdmin)
                                {
                                    <li class="nav-item align-self-center">
                                        <div class="dropdown">
                                            <button class="btn dropdown-toggle text-light no-focus-outline" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Admin
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li class="dropdown-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Registrar" asp-action="Overview">Reports</a>
                                                </li>
                                                <li class="dropdown-item">
                                                    <a class="nav-link" asp-area="" asp-controller="Obstacles" asp-action="List">Obstacles</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                }                                


                                @* Registrar link for Registrar role when not SuperAdmin *@
                                @if (isRegistrar && !isSuperAdmin)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Registrar" asp-action="Overview">Registrar</a>
                                    </li>
                                }
                            </ul>

                        <ul class="navbar-nav flex-grow-1 justify-content-end align-items-center">
                            @* Tutorial link is visible for FlightCrew only *@
                            @if (isFlightCrew)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Tutorial">Tutorial</a>
                                </li>
                            }

                            <li class="nav-item">
                                <div class="dropdown me-4">
                                    <button class="btn dropdown-toggle text-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @User?.Identity?.Name @* Display current user name *@
                                    </button>

                                    @* Account menu (Dashboard + Sign out) *@
                                    <ul class="dropdown-menu dropdown-menu-end account-menu">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">
                                                Dashboard
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item text-danger d-flex align-items-center gap-2"
                                               href="#"
                                               data-bs-toggle="modal"
                                               data-bs-target="#logoutModal">
                                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                                Sign out
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
            </nav>
                @* iPad / tablet navbar using offcanvas menu *@
                <nav id="navbarIPAD" class="navbar fixed-top">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <button class="navbar-toggler bg-body me-2 ms-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                            <div class="offcanvas-header">
                                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body">
                                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                    <li class="nav-item mb-3">
                                        <a class="nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                        asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    
                                    @* Draft page for all authenticated users (iPad) *@
                                    <li class="nav-item mb-3">
                                        <a class="nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                        asp-area="" asp-controller="Obstacles" asp-action="Draft">Draft</a>
                                    </li>

                                    @* Tutorial page visible only for FlightCrew (iPad) *@
                                    @if (isFlightCrew)
                                    {
                                        <li class="nav-item mb-3">
                                            <a class="nav-link btn btn-dark active text-light" asp-area="" asp-controller="Home" asp-action="Tutorial" role="button">Tutorial</a>
                                        </li>
                                    }

                                    <li class="nav-item mb-3">
                                        <a class="nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                        asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
                                    </li>

                                    @* Registrar overview only for SuperAdmin on iPad *@
                                    @if (isSuperAdmin)
                                    {
                                        <li class="nav-item mb-3">
                                            <a class="nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                            asp-area="" asp-controller="Registrar" asp-action="Overview">Registrar</a>
                                        </li>
                                    }

                                    <li class="nav-item mt-4 pt-3 border-top">
                                        <a class="nav-link btn btn-outline-danger text-danger d-flex align-items-center justify-content-center gap-2" 
                                           href="#" 
                                           data-bs-toggle="modal" 
                                           data-bs-target="#logoutModal"
                                           role="button">
                                            <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                            Log out
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        }

        @* Global back button for iPad pages (hidden on Draft where a specific back button exists) *@
        <button class="ipad-back-button" 
                onclick="window.history.back(); return false;"
                aria-label="Back">
            <i class="bi bi-arrow-left-circle"></i>
        </button>

        @* Success / Error toast messages shown at the top of all pages *@
        @if (TempData["Success"] != null)
        {
            <div class="position-fixed top-0 start-50 translate-middle-x p-3 alert-toast-container" style="z-index: 9999;">
                <div id="successAlert" class="alert alert-success alert-dismissible fade show shadow-lg border-0" role="alert">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Success!</strong>
                            <div class="small mt-1">@TempData["Success"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="position-fixed top-0 start-50 translate-middle-x p-3 alert-toast-container" style="z-index: 9999;">
                <div id="errorAlert" class="alert alert-danger alert-dismissible fade show shadow-lg border-0" role="alert">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4m.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2"/>
                            </svg>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Error!</strong>
                            <div class="small mt-1">@TempData["Error"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="position-fixed top-0 start-50 translate-middle-x p-3 alert-toast-container" style="z-index: 9999;">
                <div id="warningAlert" class="alert alert-warning alert-dismissible fade show shadow-lg border-0" role="alert">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
                            </svg>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <strong>Warning!</strong>
                            <div class="small mt-1">@TempData["Warning"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        @RenderBody()

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @if (isSignedIn)
        {
            <script src="~/js/dualNavbar.js"></script>
        }

        @await RenderSectionAsync("Scripts", required: false)
        @await RenderSectionAsync("Styles", required: false)

        @* Logout confirmation modal shared across pages *@
        <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="logoutModalLabel">Confirm Log out</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to log out?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button id="confirmLogout" class="btn btn-danger">Log out</button>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>