@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luftfartshinder</title>
    <script type="importmap"></script>
    <script src="https://kit.fontawesome.com/53d2400da6.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Luftfartshinder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>

<body>
    @if (signInManager.IsSignedIn(User))
    {
        <header >
            <nav id="navbarPC" class="navbar navbar-expand-sm navbar-light bg-detail box-shadow fixed-top">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home"
                       asp-action="Index">Luftfartshinder</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" 
                                    asp-area="" 
                                    asp-controller="Home"
                                    asp-action="Index"
                                >Home</a>
                            </li>

                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <li class="nav-item align-self-center">
                                    <div class="dropdown">
                                        <button class="btn dropdown-toggle text-light no-focus-outline" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Admin
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li class="dropdown-item">
                                                <a class="nav-link"
                                                   asp-area=""
                                                   asp-controller="Account"
                                                   asp-action="Dashboard">Dashboard</a>
                                            </li>

                                            <li class="dropdown-item">
                                                <a class="nav-link"
                                                   asp-area=""
                                                   asp-controller="Registrar"
                                                   asp-action="Index">Registrar</a>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-white" 
                                    asp-area="" 
                                    asp-controller="Obstacles"
                                    asp-action="Draft"
                                >Draft</a>
                            </li>

                            @if (User.IsInRole("Registrar") && !User.IsInRole("SuperAdmin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" 
                                        asp-area="" 
                                        asp-controller="Registrar" 
                                        asp-action="Index"
                                    >Registrar</a>
                                </li>

                            }
                        </ul>

                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            @if (User.IsInRole("FlightCrew"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white"
                                       href="#"
                                       id="tutorialNavButton"
                                       style="cursor: pointer;">Tutorial</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white"
                                   asp-area=""
                                   asp-controller="Feedback"
                                   asp-action="Index">Feedback</a>
                            </li>

                            <li class="nav-item">
                                <div class="dropdown me-4">
                                    <button class="btn dropdown-toggle text-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @User?.Identity?.Name
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-end account-menu">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Dashboard">
                                                Dashboard
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item text-danger d-flex align-items-center gap-2"
                                               href="#"
                                               data-bs-toggle="modal"
                                               data-bs-target="#logoutModal">
                                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                                Sign out
                                            </a>
                                        </li>
                                    </ul>
                                </div>


                            </li>
                        </ul>
                            

                        
                    </div>
                </div>
            </nav>

            <nav id="navbarIPAD" class="navbar fixed-top">
                <div class="container-fluid">
                    @* <a class="navbar-brand" href="#">Offcanvas navbar</a> *@
                    <button class="navbar-toggler bg-body me-2 ms-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Travel to where?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                        asp-area=""
                                        asp-controller="Home"
                                        asp-action="Index"
                                    >Home</a>
                                </li>

                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                       asp-area=""
                                       asp-controller="Obstacles"
                                       asp-action="Draft"
                                    >Draft</a>
                                </li>

                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                       asp-area=""
                                       asp-controller="Feedback"
                                       asp-action="Index"
                                    >Feedback</a>
                                </li>

                                @if (User.IsInRole("FlightCrew"))
                                {
                                    <li class="nav-item mb-3">
                                        <a class="nav-link btn btn-dark active text-light" 
                                           href="#" 
                                           id="tutorialNavButtonIPad"
                                           role="button"
                                           style="cursor: pointer;">Tutorial</a>
                                    </li>
                                }

                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                       asp-area=""
                                       asp-controller="Account"
                                       asp-action="Dashboard">Dashboard</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    
    
    }

    @RenderBody()


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)

    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Sign Out</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to sign out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button id="confirmLogout" class="btn btn-danger">Sign out</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>