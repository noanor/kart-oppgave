@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Luftfartshinder</title>
    <script type="importmap"></script>
    <script src="https://kit.fontawesome.com/53d2400da6.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Luftfartshinder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>

<body>
    @if (signInManager.IsSignedIn(User))
    {
        <header >
            <nav id="navbarPC" class="navbar navbar-expand-sm navbar-light bg-detail box-shadow fixed-top">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home"
                       asp-action="Index">Luftfartshinder</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" 
                                    asp-area="" 
                                    asp-controller="Home"
                                    asp-action="Index"
                                >Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" 
                                    asp-area="" 
                                    asp-controller="Obstacles"
                                    asp-action="Draft"
                                >Draft</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" 
                                    asp-area="" 
                                    asp-controller="Feedback" 
                                    asp-action="Index"
                                >Feedback</a>
                            </li>

                            @if (User.IsInRole("Registrar"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" 
                                        asp-area="" 
                                        asp-controller="Registrar" 
                                        asp-action="Index"
                                    >Registrar</a>
                                </li>

                            }
                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" 
                                        asp-area="" 
                                        asp-controller="Home" 
                                        asp-action="SuperAdminHome"
                                    >Dashboard</a>
                                </li>
                            }
                        </ul>
                        <div class="d-flex align-items-center ms-auto text-light">

                            @User?.Identity?.Name



                            <a id="signoutButton" class="btn me-3 ms-3 bg-light text-dark" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Sign out</a>


                        </div>
                    </div>
                </div>
            </nav>

            <nav id="navbarIPAD" class="navbar fixed-top">
                <div class="container-fluid">
                    @* <a class="navbar-brand" href="#">Offcanvas navbar</a> *@
                    <button class="navbar-toggler bg-body me-2 ms-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Travel to where?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                        asp-area=""
                                        asp-controller="Home"
                                        asp-action="Index"
                                    >Home</a>
                                </li>

                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                       asp-area=""
                                       asp-controller="Obstacles"
                                       asp-action="Draft"
                                    >Draft</a>
                                </li>

                                <li class="nav-item mb-3">
                                    <a class=" nav-link btn btn-dark active text-light" aria-current="page" role="button"
                                       asp-area=""
                                       asp-controller="Feedback"
                                       asp-action="Index"
                                    >Feedback</a>
                                </li>


                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    
    
    }

    @RenderBody()


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Sign Out</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to sign out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a id="confirmLogout" class="btn btn-danger">Sign out</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>